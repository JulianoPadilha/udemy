{
  "name": "js-tdd",
  "version": "1.0.0",
  "description": "Biblioteca do curso de JS com TDD na p≈ïatica",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --watch",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint && npm run test:coverage",
    "test:coverage": "nyc npm test"
  },
  "nyc": {
    "reporter": ["text", "html"],
    "exclude": ["tests/**"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JulianoPadilha/udemy.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Juliano Padilha <sistemas.padilha@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JulianoPadilha/udemy/issues"
  },
  "homepage": "https://github.com/JulianoPadilha/udemy#readme",
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "husky": "^0.14.3",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2"
  }
}
